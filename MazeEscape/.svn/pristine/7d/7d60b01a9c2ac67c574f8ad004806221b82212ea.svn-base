		System.out.println();
		
		for (int i = 0; i < maxFilas; i++) {
			
			for (int j = 0; j< maxColumnas; j++) {
								
				System.out.print("|_");
			}
			
			System.out.print("|");
			System.out.println();
		}
		
		System.out.println();
	}
	
	
